    "paragraph": {
      "title": "Paragraph text",
      "description": "A paragraph describing image.",
      "type": "string",
      "maxLength": 190,
      "minLength": 0
    },
    "imgData": {
      "title": "Image (small)",
      "description": "Data containing a small photo to go with paragraph.",
      "type": "string",
      "maxLength": 2000,
      "media": {
        "binaryEncoding": "base64",
        "type": "image/png"
      }
    }
  },
  "links": [

  ]
