    },
    "paragraph": {
      "title": "Paragraph text",
      "description": "A paragraph describing image.",
      "type": "string",
      "maxLength": 190,
      "minLength": 0
    },
    "imgData": {
      "title": "Image (medium)",
      "description": "Data containing a medium photo to go with paragraph.",
      "type": "string",
      "maxLength": 5000,
      "media": {
        "binaryEncoding": "base64",
        "type": "image/png"
      }
    }
  },
  "links": [

  ]
