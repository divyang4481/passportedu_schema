{
  "id": "/api/v1/student/application.json",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Student Application",
  "type": "object",
  "name": "Student Applications",
  "description": "An application to attend a college or a university as a student.",
  "properties": {
    "studentId": {
      "title": "Unique ID of an Student",
      "readonly": true,
      "identity": true,
      "type": "string"
    },
    "applications": {
      "title": "Student applications",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "applicationId": {
            "type": "string"
          },
          "student": {
            "type": "object",
            "properties": {
              "studentId": {
                "type": "string"
              }
            }
          },
          "schools": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "schoolId": {
                  "type": "string"
                }
              }
            }
          }
        },
        "links": [
          {
            "title": "Full Application",
            "rel": "full_{{applicationId}}",
            "href": "/api/v1/students/{{studentId}}/applications/{{applicationId}}"
          },
          {
            "title": "Application Cards",
            "rel": "cards_{{applicationId}}",
            "href": "/api/v1/students/{{studentId}}/applications/{{applicationId}}/cards"
          }
        ]
      }
    }
  },
  "links": [
    {
      "title": "API Root",
      "rel": "root",
      "href": "/api/v1"
    },
    {
      "title": "Public Home",
      "rel": "public",
      "href": "/api/v1/public"
    },
    {
      "title": "Student Home",
      "rel": "student",
      "href": "/api/v1/students/{{studentId}}"
    },
    {
      "title": "My Applications",
      "rel": "self",
      "href": "/api/v1/students/{{studentId}}/applications"
    },
    {
      "title": "Create an Application",
      "rel": "createApplication",
      "method": "POST",
      "href": "/api/v1/students/{{studentId}}/applications",
      "properties": {
        "mediaType": {
          "title": "mediaType",
          "description": "media type",
          "identity": false,
          "readonly": false,
          "type": "enum",
          "enum": [
            "/api/v1/applications/universal.json"
          ]
        },
        "data": {
          "title": "Meta Data",
          "description": "meta data",
          "identity": false,
          "readonly": false,
          "type": "any"
        },
        "updated": {
          "title": "updated",
          "description": "updated",
          "identity": false,
          "readonly": false,
          "type": "date-time"
        }
      }
    }
  ]
}

