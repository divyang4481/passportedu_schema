{
  "id": "/api/v1/student/application.json",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "application",
  "type": "object",
  "name": "application",
  "description": "An application to attend a college or a university as a student.",
  "properties": {
    "applicationId": {
      "title": "Unique ID of an Application",
      "readonly": true,
      "identity": true,
      "type": "string"
    },
    "studentId": {
      "title": "Unique ID of an Student",
      "readonly": true,
      "identity": true,
      "type": "string"
    },
    "applications": {
      "title": "Student applications",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "applicationId": {
            "type": "string"
          },
          "student": {
            "type": "object",
            "properties": {
              "studentId": {
                "type": "string"
              }
            },
            "links": [
              {
                "rel": "full",
                "href": "/api/v1/students/{{studentId}}"
              }
            ]
          },
          "schools": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "schoolId": {
                  "type": "string"
                }
              },
              "links": [
                {
                  "rel": "full",
                  "href": "/api/v1/schools/{{schoolId}}"
                }
              ]
            }
          }
        },
        "links": [
          {
            "rel": "full",
            "href": "/api/v1/students/{{student.studentId}}/applications/{{applicationId}}"
          }
        ]
      }
    }
  },
  "links": [

  ]
}

