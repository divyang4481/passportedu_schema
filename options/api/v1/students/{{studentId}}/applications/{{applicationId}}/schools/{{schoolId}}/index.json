{
  "id": "/api/v1/student/application/schools.json",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Application School",
  "type": "object",
  "name": "school",
  "description": "School from an application",
  "properties": {
    "applicationId": {
      "title": "Unique ID of an Application",
      "readonly": true,
      "identity": true,
      "type": "string"
    },
    "studentId": {
      "title": "Unique ID of an Student",
      "readonly": true,
      "identity": true,
      "type": "string"
    },
    "schoolId": {
      "title": "Unique ID of an School",
      "readonly": true,
      "identity": true,
      "type": "string"
    },
    "school": {
      "title": "Application School",
      "description": "Application School",
      "type": "object"
    }
  },
  "links": [
    {
      "title": "Home",
      "description": "The root resource for Passport EDU",
      "rel": "home",
      "href": "/api/v1"
    },
    {
      "title": "Search and Explore Schools",
      "rel": "public",
      "href": "/api/v1/resources/schools"
    },
    {
      "title": "Manage My Student Applications",
      "rel": "students",
      "href": "/api/v1/students"
    },
    {
      "title": "My Applications",
      "rel": "applications",
      "href": "/api/v1/students/{{studentId}}/applications"
    },
    {
      "title": "This Application {{applicationId}}",
      "rel": "application",
      "href": "/api/v1/students/{{studentId}}/applications/{{applicationId}}"
    },
    {
      "title": "This Application's Schools",
      "rel": "schools",
      "href": "/api/v1/students/{{studentId}}/applications/{{applicationId}}/schools"
    },
    {
      "title": "{{school.data.institutionName}}",
      "rel": "self",
      "href": "/api/v1/students/{{studentId}}/applications/{{applicationId}}/schools/{{schoolId}}"
    },
    {
      "title": "Remove [{{school.data.institutionName}}] from Application",
      "rel": "delete",
      "method": "DELETE",
      "href": "/api/v1/students/{{studentId}}/applications/{{applicationId}}/schools/{{schoolId}}"
    }
  ]
}

