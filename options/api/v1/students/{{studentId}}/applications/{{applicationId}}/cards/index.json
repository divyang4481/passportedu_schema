{
  "id": "/api/v1/student/application/cards.json",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Application Cards",
  "type": "object",
  "name": "cards",
  "description": "Cards from an application",
  "properties": {
    "applicationId": {
      "title": "Unique ID of an Application",
      "readonly": true,
      "identity": true,
      "type": "string"
    },
    "studentId": {
      "title": "Unique ID of an Student",
      "readonly": true,
      "identity": true,
      "type": "string"
    },
    "cards": {
      "title": "Application Cards",
      "description": "Application Cards",
      "type": "array",
      "items": {
        "description": "A card within an application.",
        "$ref": "/api/v1/student/application/card.json"
      }
    },
    "count": {
      "title": "Total count of cards",
      "type": "number"
    },
    "pages": {
      "title": "Total number of pages of cards",
      "type": "number"
    },
    "page": {
      "title": "Current page of results",
      "type": "number"
    },
    "meta": {
      "title": "Meta Data for this Search",
      "description": "Meta Data for this Search",
      "type": "array",
      "items": {
        "title": "Page",
        "type": "object",
        "properties": {
          "query": {
            "title": "Query String",
            "type": "string"
          },
          "page": {
            "title": "Page",
            "type": "number"
          }
        },
        "links": [
          {
            "title": "Go to Page {{page}}",
            "rel": "goToPage_{{page}}",
            "href": "/api/v1/students/{{studentId}}/applications/{{applicationId}}/cards/?{{query}}"
          }
        ]
      }
    }
  },
  "links": [
    {
      "title": "API Root",
      "rel": "root",
      "href": "/api/v1"
    },
    {
      "title": "Public Home",
      "rel": "public",
      "href": "/api/v1/public"
    },
    {
      "title": "Student Home",
      "rel": "student",
      "href": "/api/v1/students/{{studentId}}"
    },
    {
      "title": "My Applications",
      "rel": "applications",
      "href": "/api/v1/students/{{studentId}}/applications"
    },
    {
      "title": "My Application Cards",
      "rel": "self",
      "href": "/api/v1/students/{{studentId}}/applications"
    },
    {
      "title": "Search Cards",
      "rel": "cards",
      "href": "/api/v1/students/{{studentId}}/applications/{{applicationId}}/cards",
      "properties": {
        "offset": {
          "title": "offset",
          "description": "Offset to start with",
          "required": false,
          "type": "number"
        },
        "limit": {
          "title": "limit",
          "description": "Number of items to return",
          "required": false,
          "type": "number"
        },
        "data": {
          "title": "data",
          "description": "data is equal to",
          "identity": false,
          "readonly": false,
          "type": "any"
        },
        "updated": {
          "title": "updated",
          "description": "updated is equal to",
          "identity": false,
          "readonly": false,
          "type": "date-time"
        },
        "updated>": {
          "title": "updated",
          "description": "updated is greater than",
          "identity": false,
          "readonly": false,
          "type": "date-time"
        },
        "updated<": {
          "title": "updated",
          "description": "updated is less than",
          "identity": false,
          "readonly": false,
          "type": "date-time"
        }
      }
    },
    {
      "title": "Add a Card",
      "rel": "newCard",
      "method": "POST",
      "href": "/api/v1/students/{{studentId}}/applications/{{applicationId}}/cards",
      "properties": {
        "data": {
          "title": "data",
          "description": "data",
          "type": "any"
        },
        "mediaType": {
          "title": "mediaType",
          "description": "mediaType of the data",
          "type": "enum",
          "enum": [
            "/api/v1/card/form/small.json",
            "/api/v1/card/form/medium.json",
            "/api/v1/card/form/large.json",
            "/api/v1/card/dial/small.json"
          ]
        },
        "updated": {
          "title": "updated",
          "description": "updated",
          "type": "date-time"
        }
      }
    }
  ]
}

