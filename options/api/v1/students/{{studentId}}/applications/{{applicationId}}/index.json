{
  "id": "/api/v1/students/{{studentId}}/applications/{{applicationId}}",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Student Application",
  "type": "object",
  "name": "Student Application",
  "description": "An application to attend a college or a university as a student.",
  "properties": {
    "applicationId": {
      "title": "Unique ID of an Application",
      "readonly": true,
      "identity": true,
      "type": "string"
    },
    "application": {
      "title": "This {{application.name}} Application",
      "type": "object",
      "properties": {
        "applicationId": {
          "type": "string"
        },
        "data": {
          "type": "string"
        },
        "student": {
          "type": "object",
          "properties": {
            "studentId": {
              "type": "string"
            }
          }
        },
        "schools": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "schoolId": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "studentId": {
      "title": "Unique ID of an Student",
      "readonly": true,
      "identity": true,
      "type": "string"
    },
    "cards": {
      "title": "cards",
      "description": "cards",
      "identity": false,
      "readonly": false,
      "type": "array",
      "items": {
        "description": "A card within an application.",
        "$ref": "/api/v1/student/application/card.json"
      }
    }
  },
  "links": [
    {
      "title": "Home",
      "description": "The root resource for Passport EDU",
      "rel": "home",
      "href": "/api/v1"
    },
    {
      "title": "Manage My Student Applications",
      "rel": "students",
      "href": "/api/v1/students"
    },
    {
      "title": "My Applications",
      "rel": "applications",
      "href": "/api/v1/students/{{studentId}}/applications"
    },
    {
      "title": "Application {{applicationId}}",
      "rel": "self",
      "href": "/api/v1/students/{{studentId}}/applications/{{applicationId}}"
    },
    {
      "title": "Delete this Application",
      "rel": "delete_application",
      "method": "DELETE",
      "href": "/api/v1/students/{{studentId}}/applications/{{applicationId}}"
    },
    {
      "title": "This Application Cards",
      "rel": "cards",
      "href": "/api/v1/students/{{studentId}}/applications/{{applicationId}}/cards"
    }
  ]
}

