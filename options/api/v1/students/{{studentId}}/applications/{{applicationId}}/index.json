{
  "id": "/api/v1/student/application.json",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Student Application",
  "type": "object",
  "name": "Student Application",
  "description": "An application to attend a college or a university as a student.",
  "properties": {
    "applicationId": {
      "title": "Unique ID of an Application",
      "readonly": true,
      "identity": true,
      "type": "string"
    },
    "studentId": {
      "title": "Unique ID of an Student",
      "readonly": true,
      "identity": true,
      "type": "string"
    },
    "cards": {
      "title": "cards",
      "description": "cards",
      "identity": false,
      "readonly": false,
      "type": "array",
      "items": {
        "description": "A card within an application.",
        "$ref": "/api/v1/student/application/card.json"
      }
    }
  },
  "links": [
    {
      "title": "API Root",
      "rel": "root",
      "href": "/api/v1"
    },
    {
      "title": "Public Home",
      "rel": "public",
      "href": "/api/v1/public"
    },
    {
      "title": "Student Home",
      "rel": "student",
      "href": "/api/v1/students/{{studentId}}"
    },
    {
      "title": "My Applications",
      "rel": "applications",
      "href": "/api/v1/students/{{studentId}}/applications"
    },
    {
      "title": "This Application",
      "rel": "self",
      "href": "/api/v1/students/{{studentId}}/applications/{{applicationId}}"
    },
    {
      "title": "Delete this Application",
      "rel": "delete_application",
      "method": "DELETE",
      "href": "/api/v1/students/{{studentId}}/applications/{{applicationId}}"
    },
    {
      "title": "Add a School to Application",
      "rel": "add_school",
      "method": "PUT",
      "href": "/api/v1/students/{{studentId}}/applications/{{applicationId}}/schools",
      "properties": {
        "schoolIds": {
          "title": "School IDs",
          "description": "Unique IDs of schools to be added",
          "type": "array",
          "items": {
            "title": "school ID",
            "type": "string"
          }
        }
      },
      "required": ["school"]
    },
    {
      "title": "Search Cards",
      "rel": "cards",
      "href": "/api/v1/students/{{studentId}}/applications/{{applicationId}}/cards/",
      "properties": {
        "offset": {
          "title": "offset",
          "description": "Offset to start with",
          "required": false,
          "type": "number"
        },
        "limit": {
          "title": "limit",
          "description": "Number of items to return",
          "required": false,
          "type": "number"
        },
        "data": {
          "title": "data",
          "description": "data is equal to",
          "identity": false,
          "readonly": false,
          "type": "any"
        },
        "updated": {
          "title": "updated",
          "description": "updated is equal to",
          "identity": false,
          "readonly": false,
          "type": "date-time"
        },
        "updated>": {
          "title": "updated>",
          "description": "updated is greater than",
          "identity": false,
          "readonly": false,
          "type": "date-time"
        },
        "updated<": {
          "title": "updated<",
          "description": "updated is less than",
          "identity": false,
          "readonly": false,
          "type": "date-time"
        }
      }
    },
    {
      "title": "Add a Card",
      "rel": "newCard",
      "method": "POST",
      "href": "/api/v1/students/{{studentId}}/applications/{{applicationId}}/cards",
      "properties": {
        "data": {
          "title": "data",
          "description": "data",
          "type": "any"
        },
        "mediaType": {
          "title": "mediaType",
          "description": "mediaType of the data",
          "type": "enum",
          "enum": [
            "/api/v1/card/form/small.json",
            "/api/v1/card/form/medium.json",
            "/api/v1/card/form/large.json",
            "/api/v1/card/dial/small.json"
          ]
        },
        "updated": {
          "title": "updated",
          "description": "updated",
          "type": "date-time"
        }
      }
    }
  ]
}

