{
  "id": "/api/v1/student",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Student Home",
  "type": "object",
  "name": "Student Home",
  "description": "A Student's entry point or home page.",
  "properties": {
    "studentId": {
      "title": "Unique ID of a Student",
      "readonly": true,
      "identity": true,
      "type": "string"
    },
    "cards": {
      "title": "cards",
      "description": "cards",
      "identity": false,
      "readonly": false,
      "type": "array",
      "items": {
        "description": "A card within an application.",
        "$ref": "/api/v1/students/applications/card.json"
      }
    }
  },
  "links": [
    {
      "title": "Home",
      "description": "The root resource for Passport EDU",
      "rel": "home",
      "href": "/api/v1"
    },
    {
      "title": "Search and Explore Schools",
      "rel": "public",
      "href": "/api/v1/resources/schools"
    },
    {
      "title": "Manage My Student Applications",
      "rel": "students",
      "href": "/api/v1/students"
    },
    {
      "title": "My Applications",
      "rel": "applications",
      "href": "/api/v1/students/{{studentId}}/applications"
    }
  ]
}

