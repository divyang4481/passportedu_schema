{
  "id": "/api/v1/students/{{studentId}}",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "My Schools",
  "type": "object",
  "description": "These are the schools you are applying to",
  "properties": {
    "studentId": {
      "title": "Unique ID of a Student",
      "readonly": true,
      "identity": true,
      "type": "string"
    },
    "student": {
      "title": "Student Info",
      "description": "Student's saved information",
      "type": "object",
      "properties": {
        "fullName": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "applications": {
          "type": "array",
          "items": {
            "description": "A school a student wants to apply to.",
            "type": "object",
            "properties": {
              "_id": {
                "title": "_id ",
                "description": "_id ",
                "identity": true,
                "readonly": true,
                "type": "string"
              },
              "data": {
                "title": "Info",
                "description": "",
                "identity": false,
                "readonly": false,
                "type": "object"
              },
              "mediaTypes": {
                "title": "Media Types",
                "description": "mediaTypes ",
                "identity": false,
                "readonly": false,
                "type": ""
              },
              "cards": {
                "title": "Card Ids",
                "description": "cardIds ",
                "identity": false,
                "readonly": false,
                "type": ""
              }
            },
            "links": [
              {
                "title": "View Application {{data.type}}",
                "description": "{{data.type}}",
                "rel": "full_{{_id}}",
                "template": "/templates/api/v1/card/students/application",
                "method": "GET",
                "card": "extraSmallCard",
                "importance": "content",
                "href": "/api/v1/students/{{studentId}}/applications/{{_id}}"
              }
            ]
          }
        }
      }
    }
  },
  "links": [
    {
      "title": "My Dashboard",
      "rel": "self",
      "importance": "navigation",
      "method": "GET",
      "href": "/api/v1/students/{{studentId}}"
    },
    {
      "title": "My Application",
      "rel": "applications",
      "importance": "navigation",
      "href": "/api/v1/students/{{studentId}}/application"
    },
    {
      "title": "Search Schools",
      "rel": "search",
      "importance": "navigation",
      "href": "/api/v1/students/{{studentId}}/search/schools"
    },
    {
      "title": "Sign out",
      "rel": "logout",
      "importance": "administrative",
      "href": "/api/v1/students/logout"
    }
  ]
}
