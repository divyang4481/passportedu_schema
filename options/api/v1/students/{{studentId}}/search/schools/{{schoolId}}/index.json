{
  "id": "/api/v1/students/{{studentId}}/search/schools/{{schoolId}}",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "{{school.data.institutionName}}",
  "type": "object",
  "name": "Found a School?",
  "description": "",
  "properties": {
    "school": {
      "type": "object",
      "properties": {
        "_id": {
          "title": "_id ",
          "description": "_id ",
          "identity": true,
          "readonly": true,
          "type": "string"
        },
        "data": {
          "title": "data",
          "description": "data",
          "identity": false,
          "readonly": false,
          "type": "object"
        },
        "mediaTypes": {
          "title": "mediaTypes ",
          "description": "mediaTypes ",
          "identity": false,
          "readonly": false,
          "type": "string"
        },
        "cards": {
          "title": "Cards",
          "description": "Cards for this school",
          "identity": false,
          "readonly": false,
          "type": "array",
          "items": {
            "type": "object",
            "properties": {

            },
            "links": [
              {
                "rel": "{{_id}}",
                "importance": "cards",
                "template": "/templates/api/v1/card/{{type}}",
                "href": "/api/v1/admissions/{{admissionsId}}/applications/{{applicationId}}/cards/{{_id}}",
                "method": "GET"
              }
            ]
          }
        },
        "applications": {
          "title": "Applications",
          "description": "Applications accepted",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "type": "string"
              },
              "_id": {
                "type": "string",
                "identity": false
              }
            },
            "links": [
              {
                "title": "Apply to {{type}}",
                "description": "{{data.institutionName}}",
                "rel": "addSchool_{{_id}}",
                "importance": "callToAction",
                "method": "PUT",
                "href": "/api/v1/students/{{studentId}}/schools/{{school._id}}/applications/{{_id}}/apply"
              },
              {
                "title": "Apply to {{type}} Later",
                "description": "{{data.institutionName}}",
                "target": "nofollow",
                "rel": "saveSchool_{{_id}}",
                "importance": "callToAction",
                "method": "PUT",
                "href": "/api/v1/students/{{studentId}}/schools/{{school._id}}/applications/{{_id}}/save"
              }
            ]
          }
        }
      }
    }
  },
  "links": [
    {
      "title": "My Dashboard",
      "rel": "dashboard",
      "importance": "navigation",
      "method": "GET",
      "href": "/api/v1/students/{{studentId}}"
    },
    {
      "title": "Search Schools",
      "rel": "search",
      "importance": "navigation",
      "method": "GET",
      "href": "/api/v1/students/{{studentId}}/search/schools"
    },
    {
      "title": "{{school.data.institutionName | limitTo: 20}}...",
      "rel": "self",
      "importance": "navigation",
      "method": "GET",
      "href": "/api/v1/students/{{studentId}}/search/schools/{{school._id}}"
    },
    {
      "title": "Sign out",
      "rel": "logout",
      "importance": "administrative",
      "href": "/api/v1/students/logout"
    }
  ]
}
