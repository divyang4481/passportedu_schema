{
  "id": "/api/v1/students/{{studentId}}/applications/card",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Student Cards",
  "type": "object",
  "name": "cards",
  "description": "A card is a simple way to display content types across the site, they can be read, written. Cards break up into mobile format easily and can pile vertically or horizontally.",
  "properties": {
    "data": {
      "type": "object",
      "oneOf": [
        {
          "$ref": "/api/v1/card/form/small.json"
        },
        {
          "$ref": "/api/v1/card/form/medium.json"
        },
        {
          "$ref": "/api/v1/card/form/large.json"
        },
        {
          "$ref": "/api/v1/card/dial/small.json"
        }
      ]
    },
    "mediaType": {
      "title": "mediaType",
      "description": "mediaType of the data",
      "identity": false,
      "enum": [
        "form/small",
        "form/medium",
        "form/large",
        "dial/small"
      ]
    },
    "updated": {
      "title": "updated",
      "description": "updated",
      "identity": false,
      "readonly": false,
      "type": "date-time"
    },
    "_id": {
      "title": "_id",
      "description": "_id",
      "identity": true,
      "readonly": true,
      "type": "string"
    }
  },
  "links": [
    {
      "rel": "self",
      "href": "/api/v1/cards/{{_id}}"
    },
    {
      "rel": "destroy",
      "href": "/api/v1/cards/{{_id}}",
      "method": "DELETE"
    },
    {
      "title": "Update a Card",
      "rel": "update",
      "href": "/api/v1/cards/{{_id}}",
      "properties": {
        "data": {
          "title": "data",
          "description": "data ",
          "identity": false,
          "readonly": false,
          "type": "any"
        },
        "updated": {
          "title": "updated",
          "description": "updated ",
          "identity": false,
          "readonly": false,
          "type": "date-time"
        }
      },
      "method": "PUT"
    },
    {
      "rel": "describedBy",
      "href": "/api/v1/card/{{mediaType}}.json"
    },
    {
      "rel": "root",
      "href": "#/result"
    }
  ]
}