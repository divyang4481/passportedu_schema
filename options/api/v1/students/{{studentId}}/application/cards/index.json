{
  "id": "/api/v1/students/{{studentId}}/applications/{applicationId}}/cards",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Application Cards",
  "type": "object",
  "name": "cards",
  "description": "Cards from an application",
  "properties": {
    "applicationId": {
      "title": "Unique ID of an Application",
      "readonly": true,
      "identity": true,
      "type": "string"
    },
    "studentId": {
      "title": "Unique ID of an Student",
      "readonly": true,
      "identity": true,
      "type": "string"
    },
    "cards": {
      "title": "Application Cards",
      "description": "Application Cards",
      "type": "array",
      "items": {
        "description": "A card within an application.",
        "type": "object",
        "properties": {
          "_id": {
            "type": "string"
          },
          "data": {
            "type": "object"
          },
          "mediaType": {
            "title": "mediaType",
            "description": "mediaType of the data",
            "identity": false,
            "type": "enum",
            "enum": [
              "form/small",
              "form/medium",
              "form/large",
              "dial/small"
            ]
          },
          "owners": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "links": [
          {
            "title": "Card {{_id}}",
            "rel": "full_{{_id}}",
            "href": "/api/v1/students/{{studentId}}/applications/{{applicationId}}/cards/{{_id}}"
          },
          {
            "rel": "describedBy",
            "href": "/api/v1/card/{{mediaType}}.json"
          }
        ]
      }
    },
    "count": {
      "title": "Total count of cards",
      "type": "number"
    },
    "pages": {
      "title": "Total number of pages of cards",
      "type": "number"
    },
    "page": {
      "title": "Current page of results",
      "type": "number"
    },
    "meta": {
      "title": "Meta Data for this Search",
      "description": "Meta Data for this Search",
      "type": "array",
      "items": {
        "title": "Page",
        "type": "object",
        "properties": {
          "query": {
            "title": "Query String",
            "type": "string"
          },
          "page": {
            "title": "Page",
            "type": "number"
          }
        },
        "links": [
          {
            "title": "Go to Page {{page}}",
            "rel": "goToPage_{{page}}",
            "href": "/api/v1/students/{{studentId}}/applications/{{applicationId}}/cards/?{{query}}"
          }
        ]
      }
    }
  },
  "links": [
    {
      "title": "Home",
      "description": "The root resource for Passport EDU",
      "rel": "home",
      "importance": "navigation",
      "href": "/api/v1"
    },
    {
      "title": "Students",
      "rel": "students",
      "importance": "navigation",
      "href": "/api/v1/students"
    },
    {
      "title": "My Dashboard",
      "rel": "dashboard",
      "importance": "navigation",
      "method": "GET",
      "href": "/api/v1/students/{{studentId}}"
    },
    {
      "title": "My Application",
      "rel": "application",
      "importance": "navigation",
      "href": "/api/v1/students/{{studentId}}/application"
    },
    {
      "title": "Cards",
      "rel": "self",
      "importance": "navigation",
      "href": "/api/v1/students/{{studentId}}/application/cards"
    },
    {
      "title": "Search Cards in this Application",
      "rel": "cards",
      "importance": "tool",
      "href": "/api/v1/students/{{studentId}}/application/cards",
      "properties": {
        "offset": {
          "title": "offset",
          "description": "Offset to start with",
          "required": false,
          "type": "number"
        },
        "limit": {
          "title": "limit",
          "description": "Number of items to return",
          "required": false,
          "type": "number"
        },
        "data": {
          "title": "data",
          "description": "data is equal to",
          "identity": false,
          "readonly": false,
          "type": "any"
        },
        "updated": {
          "title": "updated",
          "description": "updated is equal to",
          "identity": false,
          "readonly": false,
          "type": "date-time"
        }
      }
    },
    {
      "title": "Add a Card to this Application",
      "rel": "newCard",
      "importance": "content",
      "method": "POST",
      "href": "/api/v1/students/{{studentId}}/application/cards",
      "properties": {
        "data": {
          "title": "data",
          "description": "data",
          "type": "object"
        },
        "mediaType": {
          "title": "Media Type",
          "description": "Type of the data",
          "type": "enum",
          "enum": [
            "form/small",
            "form/medium",
            "form/large",
            "dial/small"
          ]
        },
        "updated": {
          "title": "updated",
          "description": "updated",
          "type": "date-time"
        }
      }
    }
  ]
}

