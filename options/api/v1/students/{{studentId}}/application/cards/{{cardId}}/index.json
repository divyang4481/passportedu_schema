{
  "id": "/api/v1/students/{{studentId}}/applications/{applicationId}}/cards/{{cardId}}",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Application Card",
  "type": "object",
  "name": "card",
  "description": "Card from an application",
  "properties": {
    "applicationId": {
      "title": "Unique ID of an Application",
      "readonly": true,
      "identity": true,
      "type": "string"
    },
    "studentId": {
      "title": "Unique ID of an Student",
      "readonly": true,
      "identity": true,
      "type": "string"
    },
    "cardId": {
      "title": "Unique ID of an Card",
      "readonly": true,
      "identity": true,
      "type": "string"
    },
    "card": {
      "title": "Application Card",
      "description": "Application Card",
      "type": "object"
    }
  },
  "links": [
    {
      "title": "Home",
      "description": "The root resource for Passport EDU",
      "rel": "home",
      "importance": "navigation",
      "href": "/api/v1"
    },
    {
      "title": "Students",
      "rel": "students",
      "importance": "navigation",
      "href": "/api/v1/students"
    },
    {
      "title": "My Dashboard",
      "rel": "dashboard",
      "importance": "navigation",
      "method": "GET",
      "href": "/api/v1/students/{{studentId}}"
    },
    {
      "title": "My Application",
      "rel": "application",
      "importance": "navigation",
      "href": "/api/v1/students/{{studentId}}/application"
    },
    {
      "title": "Cards",
      "rel": "cards",
      "importance": "navigation",
      "href": "/api/v1/students/{{studentId}}/application/cards"
    },
    {
      "title": "Card",
      "rel": "self",
      "importance": "navigation",
      "href": "/api/v1/students/{{studentId}}/applications/{{applicationId}}/cards/{{cardId}}"
    },
    {
      "title": "Delete this Application Card",
      "rel": "delete",
      "importance": "content",
      "method": "DELETE",
      "href": "/api/v1/students/{{studentId}}/applications/{{applicationId}}/cards/{{cardId}}"
    },
    {
      "title": "Update this Application Card",
      "rel": "update",
      "importance": "content",
      "method": "PUT",
      "href": "/api/v1/students/{{studentId}}/applications/{{applicationId}}/cards/{{cardId}}",
      "properties": {
        "data": {
          "title": "Data",
          "type": "object",
          "oneOf": [
            {
              "$ref": "/api/v1/card/form/small.json"
            },
            {
              "$ref": "/api/v1/card/form/medium.json"
            },
            {
              "$ref": "/api/v1/card/form/large.json"
            },
            {
              "$ref": "/api/v1/card/dial/small.json"
            }
          ]
        },
        "mediaType": {
          "title": "mediaType",
          "description": "mediaType of the data",
          "identity": false,
          "type": "enum",
          "enum": [
            "form/small",
            "form/medium",
            "form/large",
            "dial/small"
          ]
        },
        "updated": {
          "title": "updated",
          "description": "updated",
          "identity": false,
          "readonly": false,
          "type": "date-time"
        }
      }
    },
    {
      "title": "Described By",
      "rel": "describedBy",
      "href": "/api/v1/card/{{card.mediaType}}.json"
    }
  ]
}

