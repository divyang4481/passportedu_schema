{
  "id": "/api/v1/students/{{studentId}}/applications",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "My Universal Application",
  "type": "object",
  "name": "Student Applications",
  "description": "All of the information you need to apply",
  "properties": {
    "studentId": {
      "title": "Unique ID of an Student",
      "readonly": true,
      "identity": true,
      "type": "string"
    },
    "applications": {
      "title": "Student applications",
      "type": "object",
      "properties": {
        "result": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "applicationId": {
                "type": "string"
              },
              "data": {
                "type": "string"
              },
              "student": {
                "type": "object",
                "properties": {
                  "studentId": {
                    "type": "string"
                  }
                }
              },
              "schools": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "schoolId": {
                      "type": "string"
                    }
                  }
                }
              }
            },
            "links": [
              {
                "title": "Full Application {{_id}}",
                "description": "{{description}}",
                "rel": "full_{{applicationId}}",
                "href": "/api/v1/students/{{studentId}}/applications/{{_id}}"
              }
            ]
          }
        }
      }
    }
  },
  "links": [
    {
      "title": "Home",
      "description": "The root resource for Passport EDU",
      "rel": "home",
      "importance": "navigation",
      "href": "/api/v1"
    },
    {
      "title": "Students",
      "rel": "students",
      "importance": "navigation",
      "href": "/api/v1/students"
    },
    {
      "title": "My Dashboard",
      "rel": "dashboard",
      "importance": "navigation",
      "method": "GET",
      "href": "/api/v1/students/{{studentId}}"
    },
    {
      "title": "My Application",
      "rel": "self",
      "importance": "navigation",
      "href": "/api/v1/students/{{studentId}}/application"
    },
    {
      "title": "Search Schools",
      "rel": "search",
      "importance": "navigation",
      "href": "/api/v1/students/{{studentId}}/search/schools"
    }
  ]
}

