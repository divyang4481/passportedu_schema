{
  "id": "/api/v1/students/{{studentId}}/applications",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "My Universal Application",
  "type": "object",
  "name": "Student Applications",
  "description": "All of the information you need to apply",
  "properties": {
    "studentId": {
      "title": "Unique ID of an Student",
      "readonly": true,
      "identity": true,
      "type": "string"
    },
    "cards": {
      "title": "Application Cards",
      "type": "array",
      "items": {
        "title": "Card {{}}",
        "type": "object",
        "properties": {
          "type": {
            "title": "Card Type",
            "description": "Type of the Card",
            "type": "string"
          }
        },
        "links": [
          {
            "rel": "{{_id}}",
            "importance": "cards",
            "template": "/templates/api/v1/card/{{type}}",
            "href": "/api/v1/admissions/{{admissionsId}}/applications/{{applicationId}}/cards/{{_id}}",
            "method": "PUT"
          }
        ]
      }
    }
  },
  "links": [
    {
      "title": "Home",
      "description": "The root resource for Passport EDU",
      "rel": "home",
      "importance": "navigation",
      "href": "/api/v1"
    },
    {
      "title": "Students",
      "rel": "students",
      "importance": "navigation",
      "href": "/api/v1/students"
    },
    {
      "title": "My Dashboard",
      "rel": "dashboard",
      "importance": "navigation",
      "method": "GET",
      "href": "/api/v1/students/{{studentId}}"
    },
    {
      "title": "My Application",
      "rel": "self",
      "importance": "navigation",
      "href": "/api/v1/students/{{studentId}}/application"
    },
    {
      "title": "Search Schools",
      "rel": "search",
      "importance": "navigation",
      "href": "/api/v1/students/{{studentId}}/search/schools"
    }
  ]
}

