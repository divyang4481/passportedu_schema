{
  "id": "/api/v1/student",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "student",
  "type": "object",
  "name": "student",
  "description": "A Student's entry point or home page.",
  "properties": {
    "studentId": {
      "title": "Unique ID of a Student",
      "readonly": true,
      "identity": true,
      "type": "string"
    },
    "cards": {
      "title": "cards",
      "description": "cards",
      "identity": false,
      "readonly": false,
      "type": "array",
      "items": {
        "description": "A card within an application.",
        "$ref": "/api/v1/students/applications/card.json"
      }
    }
  },
  "links": {
    "root": {
      "title": "Root Portal",
      "rel": "root",
      "href": "/api/v1"
    },
    "self": {
      "title": "Student Portal",
      "rel": "self",
      "href": "/api/v1/students/{{studentId}}"
    },
    "createApplication": {
      "title": "Create an Application",
      "rel": "createApplication",
      "method": "POST",
      "href": "/api/v1/students/{{studentId}}/applications",
      "properties": {
        "mediaType": {
          "title": "mediaType",
          "description": "media type",
          "identity": false,
          "readonly": false,
          "type": "enum",
          "enum": [
            "/api/v1/applications/universal.json"
          ]
        },
        "data": {
          "title": "Meta Data",
          "description": "meta data",
          "identity": false,
          "readonly": false,
          "type": "any"
        },
        "updated": {
          "title": "updated",
          "description": "updated",
          "identity": false,
          "readonly": false,
          "type": "date-time"
        }
      }
    },
    "applications": {
      "title": "My Applications",
      "rel": "applications",
      "href": "/api/v1/students/{{studentId}}/applications"
    }
  }
}

