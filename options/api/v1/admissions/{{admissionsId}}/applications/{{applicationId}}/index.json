{
  "id": "/api/v1/admissions/{{admissionsId}}/applications/{{applicationId}}",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "{{application.type}} Application",
  "type": "object",
  "description": "Configuration for {{application.type}} Application Type",
  "properties": {
    "admissionsId": {
      "title": "Unique ID of an Admissions Agent",
      "readonly": true,
      "identity": true,
      "type": "string"
    },
    "application": {
      "title": "Admissions Application",
      "type": "object",
      "properties": {
        "_id": {
          "type": "string"
        },
        "type": {
          "type": "string"
        }
      },
      "links": [
        {
          "title": "{{type}}",
          "rel": "self",
          "importance": "navigation",
          "href": "/api/v1/admissions/{{admissionsId}}/applications/{{applicationId}}"
        }
      ]
    },
    "cards": {
      "title": "Application Cards",
      "type": "array",
      "items": {
        "title": "Card {{}}",
        "type": "object",
        "properties": {
          "type": {
            "title": "Card Type",
            "description": "Type of the Card",
            "type": "string"
          }
        },
        "links": [
          {
            "rel": "{{_id}}",
            "importance": "cards",
            "target": "refresh",
            "template": "/templates/api/v1/card/{{type}}",
            "href": "/api/v1/admissions/{{admissionsId}}/applications/{{applicationId}}/cards/{{_id}}",
            "method": "GET"
          }
        ]
      }
    }
  },
  "links": [
    {
      "title": "My Dashboard",
      "rel": "myHome",
      "importance": "navigation",
      "method": "GET",
      "href": "/api/v1/admissions/{{admissionsId}}"
    },
    {
      "title": "Application Types",
      "rel": "types",
      "importance": "navigation",
      "method": "GET",
      "href": "/api/v1/admissions/{{admissionsId}}/applications"
    },
    {
      "title": "Sign out",
      "rel": "logout",
      "importance": "administrative",
      "href": "/api/v1/admissions/logout"
    },
    {
      "title": "Preview",
      "description": "{{application.type}}",
      "rel": "preview",
      "target": "new",
      "importance": "callToAction",
      "method": "GET",
      "href": "/api/v1/applications/{{application._id}}/schools/1234"
    },
    {
      "title": "Manage Schools",
      "description": "{{application.type}}",
      "rel": "assign",
      "importance": "callToAction",
      "method": "GET",
      "href": "/api/v1/admissions/{{admissionsId}}/applications/{{application._id}}/assign"
    },
    {
      "title": "Add Cards",
      "rel": "addCards",
      "importance": "alsoCall",
      "method": "GET",
      "href": "/api/v1/admissions/{{admissionsId}}/applications/{{application._id}}/addCards"
    },
    {
      "title": "Remove Cards",
      "rel": "removeCards",
      "importance": "alsoCall",
      "method": "GET",
      "href": "/api/v1/admissions/{{admissionsId}}/applications/{{application._id}}/removeCards"
    },
    {
      "title": "Arrange Cards",
      "description": "{{application.type}}",
      "rel": "arrange",
      "importance": "alsoCall",
      "method": "GET",
      "href": "/api/v1/admissions/{{admissionsId}}/applications/{{application._id}}/arrange"
    },
    {
      "title": "Delete this Application",
      "description": "{{application.type}}",
      "rel": "delete",
      "importance": "administrative",
      "method": "DELETE",
      "href": "/api/v1/admissions/{{admissionsId}}/applications/{{application._id}}"
    }
  ]
}