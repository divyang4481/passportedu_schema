      "method": "GET",
      "href": "/api/v1/admissions/{{admissionsId}}"
    },
    {
      "title": "Application Types",
      "rel": "types",
      "importance": "navigation",
      "method": "GET",
      "href": "/api/v1/admissions/{{admissionsId}}/applications"
    },
    {
      "title": "{{application.type}}",
      "rel": "self",
      "importance": "navigation",
      "method": "GET",
