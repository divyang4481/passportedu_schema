{
  "id": "/api/v1/admissions/{{admissionsId}}/applications/{{applicationId}}",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "{{application.type}} Application",
  "type": "object",
  "description": "Configuration for {{application.type}} Application Type",
  "properties": {
    "admissionsId": {
      "title": "Unique ID of an Admissions Agent",
      "readonly": true,
      "identity": true,
      "type": "string"
    },
    "application": {
      "title": "Admissions Application",
      "type": "object",
      "properties": {
        "_id": {
          "type": "string"
        },
        "type": {
          "type": "string"
        }
      }
    },
    "cards": {
      "title": "Application Cards",
      "type": "array",
      "items": {
        "title": "Card {{}}",
        "type": "object",
        "properties": {
          "type": {
            "title": "Card Type",
            "description": "Type of the Card",
            "type": "string"
          }
        },
        "links": [
          {
            "rel": "{{_id}}",
            "importance": "cards",
            "template": "/templates/api/v1/card/{{type}}",
            "href": "/api/v1/admissions/{{admissionsId}}/applications/{{applicationId}}/cards/{{_id}}",
            "method": "DELETE"
          }
        ]
      }
    },
    "errors": {
      "title": "Errors",
      "type":"array",
      "items": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string"
          }
        },
        "links": [
          {
            "title": "Try Again",
            "rel": "Try Again",
            "method": "GET",
            "importance": "content",
            "href": "/api/v1/admissions/{{admissionsId}}/applications/{{application._id}}"
          }
        ]
      }
    }
  },
  "links": [
    {
      "title": "Home",
      "description": "Home Page",
      "rel": "home",
      "importance": "navigation",
      "method": "GET",
      "href": "/api/v1"
    },
    {
      "title": "Admissions",
      "rel": "admissions",
      "importance": "navigation",
      "method": "GET",
      "href": "/api/v1/admissions"
    },
    {
      "title": "My Dashboard",
      "rel": "myHome",
      "importance": "navigation",
      "method": "GET",
      "href": "/api/v1/admissions/{{admissionsId}}"
    },
    {
      "title": "Application Types",
      "rel": "types",
      "importance": "navigation",
      "method": "GET",
      "href": "/api/v1/admissions/{{admissionsId}}/applications"
    },
    {
      "title": "Search Schools",
      "rel": "search",
      "importance": "navigation",
      "method": "GET",
      "href": "/api/v1/admissions/{{admissionsId}}/search/schools"
    },
    {
      "title": "Add More Cards",
      "rel": "cards",
      "importance": "callToAction",
      "method": "GET",
      "href": "/api/v1/admissions/{{admissionsId}}/applications/{{application._id}}/addCards"
    },
    {
      "title": "Delete Application",
      "description": "{{application.type}}",
      "rel": "delete",
      "importance": "callToAction",
      "method": "DELETE",
      "href": "/api/v1/admissions/{{admissionsId}}/applications/{{application._id}}"
    },
    {
      "title": "Preview",
      "description": "{{application.type}}",
      "rel": "preview",
      "target": "new",
      "importance": "callToAction",
      "method": "GET",
      "href": "/api/v1/applications/{{application._id}}/schools/1234"
    }
  ]
}