{
  "id": "/api/v1/admissions/{{admissionsId}}/applications",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Assign {{application.type}} to Schools",
  "description": "Assign this application to schools by toggling it on/off.",
  "type": "object",
  "properties": {
    "admissionsId": {
      "title": "Unique ID of an Admissions Agent",
      "readonly": true,
      "identity": true,
      "type": "string"
    },
    "admissions": {
      "type": "object",
      "properties": {
        "schools": {
          "title": "Application Types",
          "readonly": true,
          "identity": false,
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "_id": {
                "type": "string"
              },
              "data.institutionName": {
                "type": "string"
              }
            },
            "links": [
              {
                "title": "{{data.institutionName}}",
                "description": "{{type}}",
                "rel": "assign_{{_id}}",
                "importance": "toggle",
                "target": "refresh",
                "state": "{{(applications | filter: applicationId).length}}",
                "template": "/templates/api/v1/card/admissions/schools",
                "method": "PUT",
                "href": "/api/v1/admissions/{{admissionsId}}/schools/{{_id}}/applications/{{application._id}}/assign"
              }
            ]
          }
        }
      }
    },
    "application": {
      "title": "{{type}}",
      "type": "object",
      "properties": {
        "_id": {
          "type": "string"
        },
        "type": {
          "type": "string"
        }
      }
    }
  },
  "links": [
    {
      "title": "Home",
      "description": "The root resource for Passport EDU",
      "rel": "home",
      "importance": "navigation",
      "method": "GET",
      "href": "/api/v1"
    },
    {
      "title": "Admissions",
      "rel": "admissions",
      "importance": "navigation",
      "method": "GET",
      "href": "/api/v1/admissions"
    },
    {
      "title": "My Dashboard",
      "rel": "myHome",
      "importance": "navigation",
      "method": "GET",
      "href": "/api/v1/admissions/{{admissionsId}}"
    },
    {
      "title": "Application Types",
      "rel": "self",
      "importance": "navigation",
      "method": "GET",
      "href": "/api/v1/admissions/{{admissionsId}}/applications"
    },
    {
      "title": "Claim a School",
      "rel": "search",
      "importance": "navigation",
      "method": "GET",
      "href": "/api/v1/admissions/{{admissionsId}}/search/schools"
    },
    {
      "title": "Back to Application",
      "rel": "cards",
      "importance": "callToAction",
      "method": "GET",
      "href": "/api/v1/admissions/{{admissionsId}}/applications/{{application._id}}"
    }
  ]
}