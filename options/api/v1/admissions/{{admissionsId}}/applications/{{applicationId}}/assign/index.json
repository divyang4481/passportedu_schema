{
  "id": "/api/v1/admissions/{{admissionsId}}/applications",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Assign {{application.type}} to Schools",
  "type": "object",
  "description": "",
  "properties": {
    "admissionsId": {
      "title": "Unique ID of an Admissions Agent",
      "readonly": true,
      "identity": true,
      "type": "string"
    },
    "admissions": {
      "type": "object",
      "properties": {
        "schools": {
          "title": "Application Types",
          "readonly": true,
          "identity": false,
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "_id": {
                "type": "string"
              },
              "data.institutionName": {
                "type": "string"
              }
            },
            "links": [
              {
                "title": "{{data.institutionName}}",
                "description": "{{type}}",
                "rel": "assign_{{_id}}",
                "importance": "schools",
                "template": "/templates/api/v1/card/admissions/schools",
                "method": "PUT",
                "href": "/api/v1/admissions/{{admissionsId}}/schools/{{_id}}/applications/{{application._id}}/assign"
              }
            ]
          }
        }
      }
    },
    "application": {
      "title": "{{type}}",
      "type": "object",
      "properties": {
        "_id": {
          "type": "string"
        },
        "type": {
          "type": "string"
        }
      },
      "links": [
        {
          "title": "{{type}}",
          "description": "{{type}}",
          "rel": "full_{{_id}}",
          "importance": "applications",
          "template": "/templates/api/v1/card/admissions/applications",
          "method": "GET",
          "href": "/api/v1/admissions/{{admissionsId}}/applications/{{_id}}"
        }
      ]
    }
  },
  "links": [
    {
      "title": "Home",
      "description": "The root resource for Passport EDU",
      "rel": "home",
      "importance": "navigation",
      "method": "GET",
      "href": "/api/v1"
    },
    {
      "title": "Admissions",
      "rel": "admissions",
      "importance": "navigation",
      "method": "GET",
      "href": "/api/v1/admissions"
    },
    {
      "title": "My Dashboard",
      "rel": "myHome",
      "importance": "navigation",
      "method": "GET",
      "href": "/api/v1/admissions/{{admissionsId}}"
    },
    {
      "title": "Application Types",
      "rel": "self",
      "importance": "navigation",
      "method": "GET",
      "href": "/api/v1/admissions/{{admissionsId}}/applications"
    },
    {
      "title": "Search Schools",
      "rel": "search",
      "importance": "navigation",
      "method": "GET",
      "href": "/api/v1/admissions/{{admissionsId}}/search/schools"
    }
  ]
}