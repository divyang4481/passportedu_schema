{
  "id": "/api/v1/admissions/{{admissionsId}}/applications/{{applicationId}}",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "My Admissions Application Cards",
  "type": "object",
  "description": "The root resource for my admissions office",
  "properties": {
    "admissionsId": {
      "title": "Unique ID of an Admissions Agent",
      "readonly": true,
      "identity": true,
      "type": "string"
    },
    "applicationId": {
      "title": "Unique ID of an Application",
      "readonly": true,
      "identity": true,
      "type": "string"
    },
    "application": {
      "title": "Admissions Application",
      "readonly": true,
      "identity": false,
      "type": "object",
      "properties": {
        "_id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        }
      }
    },
    "cards": {
      "title": "Application Cards",
      "type": "array",
      "items": {
        "title": "Card {{}}",
        "type": "object",
        "properties": {
          "data": {
            "type": "object",
            "oneOf": [
              {
                "$ref": "/api/v1/card/map/small.json"
              },
              {
                "$ref": "/api/v1/card/media/medium.json"
              },
              {
                "$ref": "/api/v1/card/media/small.json"
              },
              {
                "$ref": "/api/v1/card/media/media.json"
              },
              {
                "$ref": "/api/v1/card/form/small.json"
              },
              {
                "$ref": "/api/v1/card/form/medium.json"
              },
              {
                "$ref": "/api/v1/card/form/large.json"
              },
              {
                "$ref": "/api/v1/card/range/small.json"
              },
              {
                "$ref": "/api/v1/card/dial/small.json"
              },
              {
                "$ref": "/api/v1/card/image/small.json"
              },
              {
                "$ref": "/api/v1/card/image/medium.json"
              },
              {
                "$ref": "/api/v1/card/video/medium.json"
              },
              {
                "$ref": "/api/v1/card/qrcode/medium.json"
              },
              {
                "$ref": "/api/v1/card/weather/medium.json"
              }
            ]
          },
          "mediaType": {
            "title": "Media Type",
            "description": "Type of the data",
            "identity": false,
            "type": "enum",
            "enum": [
              "map/small",
              "media/medium",
              "media/small",
              "media/media",
              "form/small",
              "form/medium",
              "form/large",
              "range/small",
              "dial/small",
              "image/small",
              "image/medium",
              "video/medium",
              "qrcode/medium",
              "weather/medium"
            ]
          },
          "updated": {
            "title": "updated",
            "description": "updated",
            "identity": false,
            "readonly": false,
            "type": "date-time"
          },
          "_id": {
            "title": "_id",
            "description": "_id",
            "identity": true,
            "readonly": true,
            "type": "string"
          }
        },
        "links": [
          {
            "title": "Card {{_id}}",
            "rel": "full_{{_id}}",
            "importance": "content",
            "href": "/api/v1/admissions/{{admissionsId}}/applications/{{applicationId}}/cards/{{_id}}"
          },
          {
            "rel": "describedBy",
            "href": "/api/v1/card/{{mediaType}}.json"
          }
        ]
      }
    }
  },
  "links": [
    {
      "title": "Home",
      "description": "The root resource for Passport EDU",
      "rel": "home",
      "importance": "navigation",
      "method": "GET",
      "href": "/api/v1"
    },
    {
      "title": "Admissions",
      "rel": "admissions",
      "importance": "navigation",
      "method": "GET",
      "href": "/api/v1/admissions"
    },
    {
      "title": "My Dashboard",
      "rel": "myHome",
      "importance": "navigation",
      "method": "GET",
      "href": "/api/v1/admissions/{{admissionsId}}"
    },
    {
      "title": "Application Types",
      "rel": "types",
      "importance": "navigation",
      "method": "GET",
      "href": "/api/v1/admissions/{{admissionsId}}/applications"
    },
    {
      "title": "{{application.type}}",
      "rel": "type",
      "importance": "navigation",
      "method": "GET",
      "href": "/api/v1/admissions/{{admissionsId}}/applications/{{application._id}}"
    },
    {
      "title": "Application Cards",
      "rel": "self",
      "importance": "navigation",
      "method": "GET",
      "href": "/api/v1/admissions/{{admissionsId}}/applications/{{application._id}}/cards"
    },
    {
      "title": "Add a Card to this Application",
      "rel": "create",
      "importance": "content",
      "method": "POST",
      "href": "/api/v1/admissions/{{admissionsId}}/applications/{{applicationId}}/cards/{{cardId}}",
      "properties": {
        "type": {
          "title": "mediaType",
          "description": "mediaType of the data",
          "identity": false,
          "type": "enum",
          "enum": [
            "application/contact/basic",
            "application/contact/address/home",
            "application/contact/address/mailing",
            "application/nationality",
            "application/demographic",
            "application/language"
          ]
        }
      }
    }
  ]
}