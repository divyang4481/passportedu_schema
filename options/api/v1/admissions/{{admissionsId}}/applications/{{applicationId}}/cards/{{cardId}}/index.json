{
  "id": "/api/v1/admissions/{{admissionsId}}/applications/{{applicationId}}/cards/{{cardId}}",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Application Card",
  "type": "object",
  "name": "card",
  "description": "Card from an application",
  "properties": {
    "admissionsId": {
      "title": "Unique ID of an Admissions Agent",
      "readonly": true,
      "identity": true,
      "type": "string"
    },
    "applicationId": {
      "title": "Unique ID of an Application",
      "readonly": true,
      "identity": true,
      "type": "string"
    },
    "cardId": {
      "title": "Unique ID of an Card",
      "readonly": true,
      "identity": true,
      "type": "string"
    },
    "card": {
      "title": "Application Card",
      "description": "Application Card",
      "type": "object"
    }
  },
  "links": [
    {
      "title": "Home",
      "description": "The root resource for Passport EDU",
      "rel": "home",
      "importance": "navigation",
      "method": "GET",
      "href": "/api/v1"
    },
    {
      "title": "Admissions",
      "rel": "self",
      "importance": "navigation",
      "method": "GET",
      "href": "/api/v1/admissions"
    },
    {
      "title": "My Dashboard",
      "rel": "myHome",
      "importance": "navigation",
      "method": "GET",
      "href": "/api/v1/admissions/{{admissionsId}}"
    },
    {
      "title": "Application Types",
      "rel": "types",
      "importance": "navigation",
      "method": "GET",
      "href": "/api/v1/admissions/{{admissionsId}}/applications"
    },
    {
      "title": "{{application.type}}",
      "rel": "type",
      "importance": "navigation",
      "method": "GET",
      "href": "/api/v1/admissions/{{admissionsId}}/applications/{{application._id}}"
    },
    {
      "title": "Application Cards",
      "rel": "cards",
      "importance": "navigation",
      "method": "GET",
      "href": "/api/v1/admissions/{{admissionsId}}/applications/{{application._id}}/cards"
    },
    {
      "title": "Card",
      "rel": "self",
      "importance": "navigation",
      "method": "GET",
      "href": "/api/v1/admissions/{{admissionsId}}/applications/{{applicationId}}/cards/{{cardId}}"
    },
    {
      "title": "Delete this Application Card",
      "rel": "delete",
      "importance": "content",
      "method": "DELETE",
      "href": "/api/v1/admissions/{{admissionsId}}/applications/{{applicationId}}/cards/{{cardId}}"
    },
    {
      "title": "Update this Application Card",
      "rel": "update",
      "importance": "content",
      "method": "PUT",
      "href": "/api/v1/admissions/{{admissionsId}}/applications/{{applicationId}}/cards/{{cardId}}",
      "properties": {
        "type": {
          "title": "Type",
          "description": "Type of Card",
          "identity": false,
          "type": "enum",
          "enum": [
            "application/attendance/term",
            "application/documents/transcript",
            "application/documents/passport",
            "application/documents/government",
            "application/contact/basic",
            "application/contact/guardian",
            "application/contact/address/home",
            "application/contact/address/mailing",
            "application/nationality",
            "application/demographic",
            "application/language",
            "application/academic/exams/sat",
            "application/academic/exams/gre",
            "application/academic/exams/gmat",
            "application/academic/schools/previous"
          ]
        }
      }
    },
    {
      "title": "Described By",
      "rel": "describedBy",
      "href": "/api/v1/card/{{card.mediaType}}.json"
    }
  ]
}
