{
  "id": "/api/v1/admissions/{{admissionsId}}",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "My Dashboard",
  "type": "object",
  "description": "My Schools, where I can accept applications online.",
  "properties": {
    "admissionsId": {
      "title": "Unique ID of an Admissions Agent",
      "readonly": true,
      "identity": true,
      "type": "string"
    },
    "admissions": {
      "type": "object",
      "properties": {
        "fullName": {
          "type": "string"
        },
        "username": {
          "type": "string"
        },
        "token": {
          "type": "string"
        },
        "userPerms": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "stripe": {
          "type": "object",
          "properties": {
            "user_id": {
              "type": "string"
            }
          }
        }
      }
    },
    "schools": {
      "title": "My Schools",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "_id": {
            "title": "_id ",
            "description": "_id ",
            "identity": true,
            "readonly": true,
            "type": "string"
          },
          "data.unitId": {
            "title": "Unit ID",
            "description": "Unique ID of School",
            "identity": false,
            "readonly": false,
            "type": "number"
          },
          "data.institutionName": {
            "title": "School Name",
            "description": "",
            "identity": false,
            "readonly": false,
            "type": "string"
          },
          "data.city": {
            "title": "City",
            "description": "City in which school is",
            "identity": false,
            "readonly": false,
            "type": "string"
          },
          "data.state": {
            "title": "State",
            "description": "State where school is",
            "identity": false,
            "readonly": false,
            "type": "string"
          },
          "data.zip": {
            "title": "Zip",
            "description": "Zip code of school",
            "identity": false,
            "readonly": false,
            "type": "string"
          }
        },
        "links": [
          {
            "title": "{{data.institutionName}}",
            "rel": "full_{{_id}}",
            "importance": "content",
            "template": "/templates/api/v1/card/admissions/schools/view",
            "href": "/api/v1/admissions/{{admissionsId}}/schools/{{_id}}"
          }
        ]
      }
    }
  },
  "links": [
    {
      "title": "My Dashboard",
      "rel": "self",
      "importance": "navigation",
      "method": "GET",
      "href": "/api/v1/admissions/{{admissionsId}}"
    },
    {
      "title": "Application Types",
      "rel": "applications",
      "importance": "navigation",
      "method": "GET",
      "href": "/api/v1/admissions/{{admissionsId}}/applications"
    },
    {
      "title": "Claim a School",
      "rel": "search",
      "importance": "administrative",
      "method": "GET",
      "href": "/api/v1/admissions/{{admissionsId}}/search/schools"
    },
    {
      "title": "Sign out",
      "rel": "logout",
      "importance": "administrative",
      "href": "/api/v1/admissions/logout"
    },
    {
      "title": "Accept Payments",
      "rel": "stripe",
      "importance": "callToAction",
      "target": "external",
      "href": "https://connect.stripe.com/oauth/authorize?response_type=code&client_id=ca_3PP3DsOtbvbsA4JfUHJRVTdUyiS8YxeU&state=admissions/{{admissionsId}}"
    }
  ]
}