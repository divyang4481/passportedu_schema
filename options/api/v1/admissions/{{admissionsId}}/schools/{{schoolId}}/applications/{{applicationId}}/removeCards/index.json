{
  "id": "/api/v1/admissions/{{admissionsId}}/schools/{{schoolId}}/applications/{{applicationId}}/removeCards",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Remove Cards from {{application.type}} Application",
  "type": "object",
  "description": "Remove cards from {{application.type}} Application Type",
  "properties": {
    "admissionsId": {
      "title": "Unique ID of an Admissions Agent",
      "readonly": true,
      "identity": true,
      "type": "string"
    },
    "application": {
      "title": "Admissions Application",
      "type": "object",
      "properties": {
        "_id": {
          "type": "string"
        },
        "type": {
          "type": "string"
        }
      }
    },
    "cards": {
      "title": "Application Cards",
      "type": "array",
      "items": {
        "title": "Card {{}}",
        "type": "object",
        "properties": {
          "type": {
            "title": "Card Type",
            "description": "Type of the Card",
            "type": "string"
          }
        },
        "links": [
          {
            "rel": "{{_id}}",
            "importance": "cards",
            "target": "refresh",
            "template": "/templates/api/v1/card/{{type}}",
            "href": "/api/v1/admissions/{{admissionsId}}/schools/{{schoolId}}/applications/{{applicationId}}/cards/{{_id}}",
            "method": "DELETE"
          }
        ]
      }
    },
    "errors": {
      "title": "Errors",
      "type":"array",
      "items": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string"
          }
        },
        "links": [
          {
            "title": "Try Again",
            "rel": "Try Again",
            "method": "GET",
            "importance": "content",
            "href": "/api/v1/admissions/{{admissionsId}}/schools/{{schoolId}}/applications/{{application._id}}"
          }
        ]
      }
    }
  },
  "links": [
    {
      "title": "My Dashboard",
      "rel": "myHome",
      "importance": "navigation",
      "method": "GET",
      "href": "/api/v1/admissions/{{admissionsId}}"
    },
    {
      "title": "Application Types",
      "rel": "types",
      "importance": "navigation",
      "method": "GET",
      "href": "/api/v1/admissions/{{admissionsId}}/schools/{{schoolId}}/applications"
    },
    {
      "title": "Sign out",
      "rel": "logout",
      "importance": "administrative",
      "href": "/api/v1/admissions/logout"
    },
    {
      "title": "Remove Cards",
      "rel": "self",
      "importance": "navigation",
      "method": "GET",
      "href": "/api/v1/admissions/{{admissionsId}}/schools/{{schoolId}}/applications/{{application._id}}/removeCards"
    },
    {
      "title": "Back to Application",
      "rel": "cards",
      "importance": "callToAction",
      "method": "GET",
      "href": "/api/v1/admissions/{{admissionsId}}/schools/{{schoolId}}/applications/{{application._id}}"
    },
    {
      "title": "Drop Cards Here",
      "description": "to remove them from this Application",
      "rel": "addToApp",
      "importance": "drop"
    }
  ]
}