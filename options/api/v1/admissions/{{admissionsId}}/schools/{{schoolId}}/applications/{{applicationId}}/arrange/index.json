{
  "id": "/api/v1/admissions/{{admissionsId}}/schools/{{schoolId}}/applications/{{applicationId}}/arrange",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Arrange Cards",
  "type": "object",
  "description": "Arrange card order for {{application.type}} application type",
  "properties": {
    "admissionsId": {
      "title": "Unique ID of an Admissions Agent",
      "readonly": true,
      "identity": true,
      "type": "string"
    },
    "schoolId": {
      "title": "Unique ID of an Admissions Agent",
      "readonly": true,
      "identity": true,
      "type": "string"
    },
    "application": {
      "title": "Admissions Application",
      "type": "object",
      "properties": {
        "_id": {
          "type": "string"
        },
        "type": {
          "type": "string"
        }
      },
      "links": [
        {
          "title": "{{type}}",
          "rel": "self",
          "importance": "navigation",
          "method": "GET",
          "href": "/api/v1/admissions/{{admissionsId}}/schools/{{schoolId}}/applications/{{_id}}"
        }
      ]
    },
    "cards": {
      "title": "Application Cards",
      "type": "array",
      "items": {
        "title": "Card {{}}",
        "type": "object",
        "properties": {
          "type": {
            "title": "Card Type",
            "description": "Type of the Card",
            "type": "string"
          }
        },
        "links": [
          {
            "rel": "arrange_{{_id}}",
            "importance": "arrangeCards",
            "method": "PUT",
            "target": "refresh",
            "template": "/templates/api/v1/card/{{type}}",
            "href": "/api/v1/admissions/{{admissionsId}}/schools/{{schoolId}}/applications/{{applicationId}}/cards/{{_id}}/arrange",
            "properties": {
              "drag": {
                "type": "object"
              },
              "drop": {
                "type": "object"
              }
            }
          }
        ]
      }
    }
  },
  "links": [
    {
      "title": "My Dashboard",
      "rel": "myHome",
      "importance": "navigation",
      "method": "GET",
      "href": "/api/v1/admissions/{{admissionsId}}"
    },
    {
      "title": "Application Types",
      "rel": "types",
      "importance": "navigation",
      "method": "GET",
      "href": "/api/v1/admissions/{{admissionsId}}/schools/{{schoolId}}/applications"
    },
    {
      "title": "Sign out",
      "rel": "logout",
      "importance": "administrative",
      "href": "/api/v1/admissions/logout"
    },
    {
      "title": "Back to Application",
      "description": "{{application.type}}",
      "rel": "application",
      "importance": "callToAction",
      "method": "GET",
      "href": "/api/v1/admissions/{{admissionsId}}/schools/{{schoolId}}/applications/{{application._id}}"
    }
  ]
}