{
  "id": "/api/v1",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "PassportEDU API",
  "name": "PassportEDU API",
  "type": "object",
  "description": "The root resource for the PassportEDU API.",
  "properties": {
    "id": {
      "title": "Unique ID of a User",
      "readonly": true,
      "identity": true,
      "type": "string"
    }
  },
  "links": [
    {
      "rel": "public",
      "href": "/api/v1/public",
      "method": "GET",
      "schema": {
        "$ref": "/api/v1/public"
      }
    },
    {
      "rel": "students",
      "href": "/api/v1/students/{{id}}",
      "method": "GET",
      "schema": {
        "$ref": "/api/v1/students"
      }
    },
    {
      "rel": "schools",
      "href": "/api/v1/schools/{{id}}",
      "method": "GET",
      "schema": {
        "$ref": "/api/v1/schools"
      }
    },
    {
      "rel": "authenticate",
      "href": "/api/v1/authenticate",
      "method": "POST",
      "targetSchema": {
        "properties": {
          "token": {
            "title": "Session Token",
            "description": "Unique token for your user session",
            "type": "string"
          },
          "id": {
            "title": "User Id",
            "description": "User Id of Logged in User",
            "type": "string"
          },
          "username": {
            "title": "Username",
            "description": "Your username",
            "type": "string"
          },
          "fullName": {
            "title": "Your full name",
            "description": "Your first and last name.",
            "type": "string"
          }
        }
      },
      "properties": {
        "username": {
          "title": "Your username",
          "description": "Your email address or username",
          "type": "string"
        },
        "password": {
          "title": "Your password",
          "description": "Your password",
          "type": "password"
        }
      },
      "required": ["username", "password"]
    }
  ]
}